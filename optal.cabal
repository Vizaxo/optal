library
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  DataKinds
                     , FlexibleContexts
                     , FlexibleInstances
                     , GeneralizedNewtypeDeriving
                     , LambdaCase
                     , MultiParamTypeClasses
                     , ScopedTypeVariables
                     , TupleSections
                     , TypeApplications
  build-depends:       base >= 4.7 && < 5
                     , containers
                     , lens
                     , mtl
  exposed-modules:     Examples
                     , Term
